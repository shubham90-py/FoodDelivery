<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img8"
    tools:context=".Delivery_loginphone">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="430dp"
        android:id="@+id/linearlayout"
        android:background="@drawable/background_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Phone Number!"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#273746"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countrycode"
                android:layout_width="120dp"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/Dphonenumber"
                android:layout_marginLeft="7dp"
                android:inputType="number"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/Sendotp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape"
            android:text="Send OTP"
            android:textColor="#273746"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Signupif"
            android:layout_marginTop="15dp"
            android:text="Don't Have An Account? Signup"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#273746"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#595858" />

            <TextView
                android:id="@+id/OR"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:text="OR"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#595858" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signphone"
            android:layout_marginTop="20dp"
            android:text="SignIn With"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#273746"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/DbtnEmail"
            android:background="@drawable/btnred"
            android:text="Email"
            android:textColor="#273746"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:padding="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>